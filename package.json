{
  "name": "dive-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean transpile",
    "server": "nodemon --exec babel-node ./src/bin/www.js",
    "start": "NODE_ENV=development npm-run-all build server",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^14.1.0",
    "express": "^4.17.2",
    "lodash": "^4.17.21",
    "luxon": "^2.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "eslint": "^8.6.0"
  }
}
